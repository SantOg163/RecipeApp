@using RecipeApp.Models
@model EditRecipeBase
<div class="form-group">
    <label asp-for="Name" class="col-md-2 control-label"></label>
    <div class="col-md-10">
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
</div>
<div class="form-group">
    <label asp-for="TimeToCookHours" class="col-md-2 control-label"></label>
    <div class="col-md-10">
        <input asp-for="TimeToCookHours" class="form-control" />
        <span asp-validation-for="TimeToCookHours" class="text-danger"></span>
    </div>
</div>
<div class="form-group">
    <label asp-for="TimeToCookMinutes" class="col-md-2 control-label"></label>
    <div class="col-md-10">
        <input asp-for="TimeToCookMinutes" class="form-control" />
        <span asp-validation-for="TimeToCookMinutes" class="text-danger"></span>
    </div>
</div>
<div class="form-group">
    <label asp-for="Method" class="col-md-2 control-label"></label>
    <div class="col-md-10">
        <input asp-for="Method" class="form-control" />
        <span asp-validation-for="Method" class="text-danger"></span>
    </div>
</div>
<div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
        <div class="checkbox">
            <input asp-for="IsVegetarian" /> Vegetarian?
            <span asp-validation-for="IsVegetarian" class="text-danger"></span>
        </div>
    </div>
</div>
<div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
        <div class="checkbox">
            <input asp-for="IsVegan" /> Vegan?
            <span asp-validation-for="IsVegan" class="text-danger"></span>
        </div>
    </div>
</div>