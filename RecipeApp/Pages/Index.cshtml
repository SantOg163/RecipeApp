@page
@model IndexModel
@{
    ViewData["Title"] = "Menu";
}

<div class="table-responsive" >
    <table class="table table-scripped-recipe">
        <thead>
            <tr>
                <th>Recipe</th>
                <th>TimeToCook</th>
                <th></th>
            </tr>
        </thead>
        @foreach(var recipe in Model.Recipes)
        {
        <tr>
            <td class="align-middle">@recipe.Name</td>
            <td class="align-middle">@recipe.TimeToCook</td>
            <td><a asp-page="Recipes/View" asp-route-id="@recipe.Id" class="btn btn-primary">View</a></td>
        </tr>
            
        }
    </table>
</div>

<a asp-page="Recipes/Create" class="btn btn-primary">Create new recipe</a>